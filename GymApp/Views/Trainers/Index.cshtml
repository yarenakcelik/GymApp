@model IEnumerable<GymApp.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
    var gyms = ViewBag.Gyms as IEnumerable<GymApp.Models.Gym>;
    var specs = ViewBag.Specializations as IEnumerable<GymApp.Models.TrainerSpecialization>;
    int? selectedGymId = ViewBag.SelectedGymId as int?;
    int? selectedSpecId = ViewBag.SelectedSpecializationId as int?;
}

<h2 class="mt-4 mb-3">Antrenörler</h2>

<form method="get" class="row g-2 mb-4">
    <div class="col-md-4">
        <select name="gymId" class="form-select">
            <option value="">Tüm Salonlar</option>
            @if (gyms != null)
            {
                foreach (var g in gyms)
                {
                    <option value="@g.Id"
                            selected="@(selectedGymId.HasValue && selectedGymId.Value == g.Id ? "selected" : null)">
                        @g.Name
                    </option>
                }
            }
        </select>
    </div>

    <div class="col-md-4">
        <select name="specializationId" class="form-select">
            <option value="">Tüm Uzmanlıklar</option>
            @if (specs != null)
            {
                foreach (var s in specs)
                {
                    <option value="@s.Id"
                            selected="@(selectedSpecId.HasValue && selectedSpecId.Value == s.Id ? "selected" : null)">
                        @s.Name
                    </option>
                }
            }
        </select>
    </div>

    <div class="col-md-4 d-flex">
        <button type="submit" class="btn btn-primary me-2">Filtrele</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Sıfırla</a>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Seçilen kriterlere uygun antrenör bulunamadı.
    </div>
}
else
{
    <div class="row">
        @foreach (var t in Model)
        {
            var services = t.TrainerServices?
                .Select(ts => ts.Service)
                .Where(s => s != null)
                .Distinct()
                .ToList();

            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@t.FullName</h5>
                        <p class="card-text mb-1">
                            <strong>Uzmanlık:</strong>
                            @(t.TrainerSpecialization?.Name ?? "Belirtilmemiş")
                        </p>
                        <p class="card-text mb-1">
                            <strong>Salon:</strong> @t.Gym?.Name
                        </p>
                        <p class="card-text mb-2">
                            <strong>Müsaitlik:</strong>
                            @if (t.AvailableFrom.HasValue && t.AvailableTo.HasValue)
                            {
                                @t.AvailableFrom.Value.ToString(@"hh\:mm")
                                @: -
                                @t.AvailableTo.Value.ToString(@"hh\:mm")
                            }
                            else
                            {
                                @:Belirtilmemiş
                            }
                        </p>

                        @if (services != null && services.Any())
                        {
                            <p class="card-text small mb-2">
                                <strong>Verdiği Hizmetler:</strong><br />
                                @foreach (var s in services.Take(3))
                                {
                                    <span class="badge bg-light text-dark border me-1 mb-1">
                                        @s.Name
                                    </span>
                                }
                                @if (services.Count > 3)
                                {
                                    <span class="badge bg-secondary">+@((services.Count - 3)) daha</span>
                                }
                            </p>
                        }

                        <div class="mt-auto">
                            <a asp-action="Details"
                               asp-route-id="@t.Id"
                               class="btn btn-outline-primary btn-sm">
                                Profili Gör
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
