@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- HERO -->
<section class="hp-hero">
    <div class="hp-hero__inner">
        <div class="hp-chip">
            <span class="hp-chip__icon">⚡</span>
            GymApp • Randevu • AI • Rapor
        </div>

        <h1 class="hp-title">
            Hedefine <span>akıllı</span> şekilde ilerle.
        </h1>

        <p class="hp-subtitle">
            Salonları, hizmetleri ve antrenörleri incele; randevunu planla.
            AI Center ile sana özel öneri al, raporlarla takip et.
        </p>

        <div class="hp-cta">
            <a class="hp-btn hp-btn--primary" asp-controller="Services" asp-action="Index">
                <span>🎯</span>
                Randevu Al
            </a>
            <a class="hp-btn" asp-controller="Appointments" asp-action="Index">
                <span>📅</span>
                Randevularım
            </a>
            <a class="hp-btn" asp-controller="AICenter" asp-action="Index">
                <span>🤖</span>
                AI Center
            </a>
        </div>
    </div>
</section>

<!-- ANA ÖZELLİKLER - 4 TEMEL MODÜL -->
<section class="hp-section">
    <div class="hp-section__head">
        <h2 class="hp-h2">Ana Özellikler</h2>
        <p class="hp-muted">Platformun temel işlevlerine hızlıca eriş.</p>
    </div>

    <div class="hp-grid hp-grid--features">
        <a class="hp-feature-card hp-feature-card--primary" asp-controller="Appointments" asp-action="Index">
            <div class="hp-feature-card__glow"></div>
            <div class="hp-feature-card__icon">📅</div>
            <div class="hp-feature-card__content">
                <h3 class="hp-feature-card__title">Randevularım</h3>
                <p class="hp-feature-card__desc">Mevcut randevularını görüntüle, düzenle ve yönet. Geçmiş randevularını incele.</p>
                <div class="hp-feature-card__link">
                    Randevulara Git
                    <span class="hp-feature-card__arrow">→</span>
                </div>
            </div>
        </a>

        <a class="hp-feature-card hp-feature-card--success" asp-controller="Services" asp-action="Index">
            <div class="hp-feature-card__glow"></div>
            <div class="hp-feature-card__icon">🧾</div>
            <div class="hp-feature-card__content">
                <h3 class="hp-feature-card__title">Randevu Al</h3>
                <p class="hp-feature-card__desc">Hizmet seç, uygun antrenörü bul ve randevunu hemen oluştur.</p>
                <div class="hp-feature-card__link">
                    Randevu Oluştur
                    <span class="hp-feature-card__arrow">→</span>
                </div>
            </div>
        </a>

        <a class="hp-feature-card hp-feature-card--ai" asp-controller="AICenter" asp-action="Index">
            <div class="hp-feature-card__glow"></div>
            <div class="hp-feature-card__icon">🤖</div>
            <div class="hp-feature-card__content">
                <h3 class="hp-feature-card__title">AI Center</h3>
                <p class="hp-feature-card__desc">Yapay zeka destekli kişisel öneri ve analiz sistemi. Sana özel egzersiz planları.</p>
                <div class="hp-feature-card__link">
                    AI'ya Git
                    <span class="hp-feature-card__arrow">→</span>
                </div>
            </div>
        </a>

        <a class="hp-feature-card hp-feature-card--info" asp-controller="Reports" asp-action="Trainers">
            <div class="hp-feature-card__glow"></div>
            <div class="hp-feature-card__icon">📊</div>
            <div class="hp-feature-card__content">
                <h3 class="hp-feature-card__title">Antrenör Raporları</h3>
                <p class="hp-feature-card__desc">REST API ile desteklenen detaylı antrenör performans ve müsaitlik raporları.</p>
                <div class="hp-feature-card__link">
                    Raporları Görüntüle
                    <span class="hp-feature-card__arrow">→</span>
                </div>
            </div>
        </a>
    </div>
</section>

<!-- HIZLI ERİŞİM -->
<section class="hp-section">
    <div class="hp-section__head">
        <h2 class="hp-h2">Hızlı Erişim</h2>
        <p class="hp-muted">Salonlar, hizmetler ve antrenörlere tek tıkla ulaş.</p>
    </div>

    <div class="hp-grid hp-grid--3">
        <a class="hp-card" asp-controller="Gyms" asp-action="Index">
            <div class="hp-card__icon">🏟️</div>
            <div class="hp-card__title">Salonlar</div>
            <div class="hp-card__desc">Spor salonlarını incele, çalışma saatlerini ve hizmetleri görüntüle.</div>
            <div class="hp-card__link">Keşfet →</div>
        </a>

        <a class="hp-card" asp-controller="Services" asp-action="Index">
            <div class="hp-card__icon">💪</div>
            <div class="hp-card__title">Hizmetler</div>
            <div class="hp-card__desc">Fitness, yoga, pilates ve daha fazla program seçeneği.</div>
            <div class="hp-card__link">Keşfet →</div>
        </a>

        <a class="hp-card" asp-controller="Trainers" asp-action="Index">
            <div class="hp-card__icon">🧑‍🏫</div>
            <div class="hp-card__title">Antrenörler</div>
            <div class="hp-card__desc">Uzman antrenörleri keşfet, uzmanlık alanlarını incele.</div>
            <div class="hp-card__link">Keşfet →</div>
        </a>
    </div>
</section>

<!-- NEDEN GYMAPP? -->
<section class="hp-section">
    <div class="hp-section__head">
        <h2 class="hp-h2">Neden GymApp?</h2>
        <p class="hp-muted">Modern teknoloji ile spor deneyimini üst seviyeye taşı.</p>
    </div>

    <div class="hp-grid hp-grid--4">
        <div class="hp-benefit">
            <div class="hp-benefit__icon">⚡</div>
            <h3 class="hp-benefit__title">Hızlı & Kolay</h3>
            <p class="hp-benefit__desc">Randevunu saniyeler içinde oluştur, anında onay al.</p>
        </div>

        <div class="hp-benefit">
            <div class="hp-benefit__icon">🎯</div>
            <h3 class="hp-benefit__title">Kişiselleştirilmiş</h3>
            <p class="hp-benefit__desc">AI destekli öneriler ile sana özel programlar.</p>
        </div>

        <div class="hp-benefit">
            <div class="hp-benefit__icon">🔒</div>
            <h3 class="hp-benefit__title">Güvenli</h3>
            <p class="hp-benefit__desc">Verileriniz şifrelenmiş ve güvenli şekilde saklanır.</p>
        </div>

        <div class="hp-benefit">
            <div class="hp-benefit__icon">📱</div>
            <h3 class="hp-benefit__title">Mobil Uyumlu</h3>
            <p class="hp-benefit__desc">Her cihazdan erişim, her yerde kullanım kolaylığı.</p>
        </div>
    </div>
</section>

<!-- İSTATİSTİKLER -->
<section class="hp-section">
    <div class="hp-section__head">
        <h2 class="hp-h2">Platform İstatistikleri</h2>
        <p class="hp-muted">Büyüyen topluluğumuza katıl.</p>
    </div>

    <div class="hp-stats">
        <div class="hp-stat">
            <div class="hp-stat__icon">👥</div>
            <div class="hp-stat__num">2500+</div>
            <div class="hp-stat__label">Aktif Üye</div>
        </div>
        <div class="hp-stat">
            <div class="hp-stat__icon">🏋️</div>
            <div class="hp-stat__num">50+</div>
            <div class="hp-stat__label">Uzman Antrenör</div>
        </div>
        <div class="hp-stat">
            <div class="hp-stat__icon">🎉</div>
            <div class="hp-stat__num">10k+</div>
            <div class="hp-stat__label">Başarılı Randevu</div>
        </div>
        <div class="hp-stat">
            <div class="hp-stat__icon">⭐</div>
            <div class="hp-stat__num">4.9</div>
            <div class="hp-stat__label">Kullanıcı Puanı</div>
        </div>
    </div>
</section>

<!-- CTA BANNER -->
<section class="hp-section">
    <div class="hp-cta-banner">
        <div class="hp-cta-banner__content">
            <h2 class="hp-cta-banner__title">Hedeflerine Ulaşmaya Hazır mısın?</h2>
            <p class="hp-cta-banner__desc">Hemen randevu oluştur ve fitness yolculuğuna başla!</p>
        </div>
        <div class="hp-cta-banner__actions">
            <a class="hp-btn hp-btn--large hp-btn--primary" asp-controller="Services" asp-action="Index">
                Hemen Başla
            </a>
            <a class="hp-btn hp-btn--large hp-btn--outline" asp-controller="AICenter" asp-action="Index">
                AI Analizi Yap
            </a>
        </div>
    </div>
</section>