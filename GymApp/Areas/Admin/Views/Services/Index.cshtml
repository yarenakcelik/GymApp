@model IEnumerable<GymApp.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<h2 class="mt-4 mb-3">Hizmetler</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Hizmet Listesi</h4>
    <a asp-action="Create" class="btn btn-primary">
        Yeni Hizmet Ekle
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Category)</th>
            <th>@Html.DisplayNameFor(model => model.First().DurationMinutes)</th>
            <th>@Html.DisplayNameFor(model => model.First().Price)</th>
            <th>@Html.DisplayName("Spor Salonu")</th>
            <th style="width: 220px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.DurationMinutes</td>
                <td>@item.Price.ToString("N2")</td>
                <td>@item.Gym?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
