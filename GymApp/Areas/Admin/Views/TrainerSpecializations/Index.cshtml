@model IEnumerable<GymApp.Models.TrainerSpecialization>

@{
    ViewData["Title"] = "Uzmanlık Alanları";
}

<h2 class="mt-4 mb-3">Uzmanlık Alanları</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Uzmanlık Listesi</h4>
    <a asp-action="Create" class="btn btn-primary">
        Yeni Uzmanlık Ekle
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Description)</th>
            <th style="width: 220px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
