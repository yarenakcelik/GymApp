@model GymApp.Models.Gym

@{
    ViewData["Title"] = "Salon Detayı";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Spor Salonu Detayı</h2>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Listeye Dön</a>
        </div>

        <div class="card-body">
            <dl class="row">

                <dt class="col-sm-3">Adı</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Açılış Saati</dt>
                <dd class="col-sm-9">@Model.OpenTime</dd>

                <dt class="col-sm-3">Kapanış Saati</dt>
                <dd class="col-sm-9">@Model.CloseTime</dd>

            </dl>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
                <a asp-action="Index" class="btn btn-link">Listeye Dön</a>
            </div>
        </div>
    </div>
</div>
