@model GymApp.Models.Gym

@{
    ViewData["Title"] = "Spor Salonu Düzenle";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Spor Salonu Düzenle</h2>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Listeye Dön</a>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="OpenTime" class="form-label"></label>
                        <input asp-for="OpenTime" class="form-control" type="time" />
                        <span asp-validation-for="OpenTime" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="CloseTime" class="form-label"></label>
                        <input asp-for="CloseTime" class="form-control" type="time" />
                        <span asp-validation-for="CloseTime" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                    <a asp-action="Index" class="btn btn-link">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
