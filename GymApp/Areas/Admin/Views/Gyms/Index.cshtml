@model IEnumerable<GymApp.Models.Gym>

@{
    ViewData["Title"] = "Spor Salonları";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Spor Salonları</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Salon Ekle
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Address)</th>
                        <th>@Html.DisplayNameFor(m => m.First().OpenTime)</th>
                        <th>@Html.DisplayNameFor(m => m.First().CloseTime)</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.OpenTime</td>
                            <td>@item.CloseTime</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Düzenle</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1 text-white">Detay</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
