@model GymApp.Models.Gym

@{
    ViewData["Title"] = "Yeni Salon";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Yeni Spor Salonu Ekle
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OpenTime" class="form-label"></label>
                            <input asp-for="OpenTime" class="form-control" />
                            <span asp-validation-for="OpenTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CloseTime" class="form-label"></label>
                            <input asp-for="CloseTime" class="form-control" />
                            <span asp-validation-for="CloseTime" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Listeye Dön</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
