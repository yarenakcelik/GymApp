@model IEnumerable<GymApp.Models.Appointment>

@{
    ViewData["Title"] = "Randevu Yönetimi";
    var status = ViewBag.SelectedStatus as string;
}

<h2 class="mt-4 mb-3">Randevu Yönetimi</h2>

<form method="get" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-auto">
            <label class="form-label">Durum</label>
            <select name="status" class="form-select">
                <option value="">Hepsi</option>
                <option value="Pending" selected="@(status == "Pending" ? "selected" : null)">Bekliyor</option>
                <option value="Approved" selected="@(status == "Approved" ? "selected" : null)">Onaylandı</option>
                <option value="Rejected" selected="@(status == "Rejected" ? "selected" : null)">Reddedildi</option>
                <option value="Cancelled" selected="@(status == "Cancelled" ? "selected" : null)">İptal</option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Filtrele</button>
        </div>
    </div>
</form>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Üye</th>
            <th>Hizmet</th>
            <th>Spor Salonu</th>
            <th>Antrenör</th>
            <th>Başlangıç</th>
            <th>Süre (dk)</th>
            <th>Ücret</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.MemberProfile?.FullName
                </td>
                <td>@item.Service?.Name</td>
                <td>@item.Service?.Gym?.Name</td>
                <td>@item.Trainer?.FullName</td>
                <td>@item.StartTime.ToString("g")</td>
                <td>@item.DurationMinutes</td>
                <td>@item.Price.ToString("N2") ₺</td>
                <td>@item.Status</td>
                <td>
                    @if (item.Status == "Pending")
                    {
                        <form asp-action="Approve"
                              asp-route-id="@item.Id"
                              method="post"
                              class="d-inline">
                            <button type="submit" class="btn btn-sm btn-success">
                                Onayla
                            </button>
                        </form>
                        <form asp-action="Reject"
                              asp-route-id="@item.Id"
                              method="post"
                              class="d-inline ms-1">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Reddet
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
