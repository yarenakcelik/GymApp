@model GymApp.Models.Trainer

@{
    ViewData["Title"] = "Antrenörü Sil";
}

<h2 class="mt-4 mb-3">Antrenörü Sil</h2>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Bu antrenörü silmek istediğinizden emin misiniz?</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Ad Soyad</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>

                    <dt class="col-sm-4">Spor Salonu</dt>
                    <dd class="col-sm-8">@Model.Gym?.Name</dd>

                    <dt class="col-sm-4">Uzmanlık</dt>
                    <dd class="col-sm-8">@Model.TrainerSpecialization?.Name ?? "—"</dd>
                </dl>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Vazgeç / Listeye Dön
                </a>
                <form asp-action="Delete" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
