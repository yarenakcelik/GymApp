@model GymApp.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör";
}

<h2 class="mt-4 mb-3">Yeni Antrenör Ekle</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Ad Soyad</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TrainerSpecializationId" class="form-label">Uzmanlık Alanı</label>
                <select asp-for="TrainerSpecializationId" class="form-select" asp-items="ViewBag.TrainerSpecializationId">
                    <option value="">Seçiniz...</option>
                </select>
                <span asp-validation-for="TrainerSpecializationId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Telefon</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Bio" class="form-label">Biyografi</label>
                <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="GymId" class="form-label">Spor Salonu</label>
                <select asp-for="GymId" class="form-select" asp-items="ViewBag.GymId">
                    <option value="">Seçiniz...</option>
                </select>
                <span asp-validation-for="GymId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AvailableFrom" class="form-label">Müsaitlik Başlangıcı</label>
                <input asp-for="AvailableFrom" class="form-control" />
                <span asp-validation-for="AvailableFrom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AvailableTo" class="form-label">Müsaitlik Bitişi</label>
                <input asp-for="AvailableTo" class="form-control" />
                <span asp-validation-for="AvailableTo" class="text-danger"></span>
            </div>
        </div>
    </div>

    <hr />

    <div class="mb-3">
        <label class="form-label">
            Verdiği Hizmetler <span class="text-danger">*</span>
        </label>

        <div class="border rounded p-3" style="max-height: 260px; overflow-y: auto;">
            @{
                var services = ViewBag.Services as IEnumerable<GymApp.Models.Service>;
            }

            @if (services != null && services.Any())
            {
                @foreach (var s in services)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="selectedServiceIds"
                               value="@s.Id"
                               id="service_@s.Id" />
                        <label class="form-check-label" for="service_@s.Id">
                            @s.Name (@s.Gym?.Name)
                        </label>
                    </div>
                }
            }
            else
            {
                <p class="text-muted mb-0">Sistemde tanımlı hizmet bulunmuyor.</p>
            }
        </div>

        <span class="text-danger">
            @Html.ValidationMessage("SelectedServiceIds")
        </span>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
