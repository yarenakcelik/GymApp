@model IEnumerable<GymApp.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<h2 class="mt-4 mb-3">Antrenörler</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Antrenör Listesi</h4>
    <a asp-action="Create" class="btn btn-primary">
        Yeni Antrenör Ekle
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Ad Soyad</th>
            <th>Spor Salonu</th>
            <th>Uzmanlık</th>
            <th>E-posta</th>
            <th>Telefon</th>
            <th>Müsaitlik</th>
            <th style="width: 220px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Gym?.Name</td>
                <td>@(item.TrainerSpecialization?.Name ?? "—")</td>
                <td>@(item.Email ?? "—")</td>
                <td>@(item.Phone ?? "—")</td>
                <td>
                    @if (item.AvailableFrom.HasValue && item.AvailableTo.HasValue)
                    {
                        @item.AvailableFrom.Value.ToString(@"hh\:mm")
                        @: -
                        @item.AvailableTo.Value.ToString(@"hh\:mm")
                    }
                    else
                    {
                        @:—
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">Detay</a>
                    <a asp-action="ManageServices" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1">Hizmetler</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
