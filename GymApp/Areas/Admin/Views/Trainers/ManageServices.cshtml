@model GymApp.Models.TrainerServicesViewModel

@{
    ViewData["Title"] = "Antrenör Hizmetleri";
}

<h2 class="mt-4 mb-3">Antrenör Hizmetleri</h2>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">@Model.TrainerName için Hizmetler</h5>
            </div>
            <div class="card-body">
                <form asp-action="ManageServices" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="TrainerId" />

                    <p class="mb-2">
                        Bu antrenörün verdiği hizmetleri işaretleyin:
                    </p>

                    <div class="mb-3">
                        @foreach (var item in Model.Services)
                        {
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="SelectedServiceIds"
                                       value="@item.ServiceId"
                                       @(item.IsSelected ? "checked" : "") />

                                <label class="form-check-label">
                                    @item.Name
                                </label>
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-between mt-3">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Listeye Dön
                        </a>
                        <button type="submit" class="btn btn-primary">
                            Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
