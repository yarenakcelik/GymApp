@model GymApp.Models.Trainer

@{
    ViewData["Title"] = "Antrenör Detayı";
}

<h2 class="mt-4 mb-3">Antrenör Detayı</h2>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">@Model.FullName</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Ad Soyad</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>

                    <dt class="col-sm-4">Spor Salonu</dt>
                    <dd class="col-sm-8">@Model.Gym?.Name</dd>

                    <dt class="col-sm-4">Uzmanlık</dt>
                    <dd class="col-sm-8">@Model.TrainerSpecialization?.Name ?? "—"</dd>

                    <dt class="col-sm-4">E-posta</dt>
                    <dd class="col-sm-8">@Model.Email ?? "—"</dd>

                    <dt class="col-sm-4">Telefon</dt>
                    <dd class="col-sm-8">@Model.Phone ?? "—"</dd>

                    <dt class="col-sm-4">Müsaitlik</dt>
                    <dd class="col-sm-8">
                        @if (Model.AvailableFrom.HasValue && Model.AvailableTo.HasValue)
                        {
                            @Model.AvailableFrom.Value.ToString(@"hh\:mm")
                            @: -
                            @Model.AvailableTo.Value.ToString(@"hh\:mm")
                        }
                        else
                        {
                            @:—
                        }
                    </dd>

                    <dt class="col-sm-4">Biyografi</dt>
                    <dd class="col-sm-8">@Model.Bio ?? "—"</dd>
                </dl>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Listeye Dön
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    Düzenle
                </a>
            </div>
        </div>
    </div>
</div>
